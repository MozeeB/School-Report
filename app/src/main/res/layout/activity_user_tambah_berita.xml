<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.berita.UserTambahBerita">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="31dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Berita"
            android:textSize="24sp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="#9C9C9C"
            android:lineSpacingExtra="-10dp"

            />

        <EditText
            android:id="@+id/edt_judul_berita"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="31dp"
            android:hint="Judul berita"
            android:textSize="14sp"
            android:background="@drawable/kotakedittext_abumuda"
            android:textColor="#000"
            android:fontFamily="@font/open_sans_light"
            android:paddingLeft="15dp"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/edt_konten_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/kotakedittext_abumuda"
            android:fontFamily="@font/open_sans_light"
            android:hint="Konten"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#000"
            android:textSize="14sp"
            android:inputType="textLongMessage"/>



        <EditText
            android:id="@+id/edt_tgl_terbit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:hint="Tanggal terbit"
            android:textSize="14sp"
            android:background="@drawable/kotakedittext_abumuda"
            android:textColor="#000"
            android:fontFamily="@font/open_sans_light"
            android:paddingLeft="15dp"
            android:inputType="date"/>

        <EditText
            android:id="@+id/edt_penerbit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:hint="Penerbit"
            android:textSize="14sp"
            android:background="@drawable/kotakedittext_abumuda"
            android:textColor="#000"
            android:fontFamily="@font/open_sans_light"
            android:paddingLeft="15dp"
            android:inputType="textPersonName"/>



        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_height="1dp"
            android:background="#EEEEEE"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#F2F2F2"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/img_berita_target"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/camerabigimage"/>


        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_choose_berita"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_sans"
            android:lineSpacingExtra="-4dp"
            android:textAllCaps="false"
            android:text="upload image"
            android:background="@drawable/tombolabuabumuda"
            android:textColor="#fff"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_height="1dp"
            android:background="#EEEEEE"/>

        <Button

            android:id="@+id/btn_kirim_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_sans"
            android:lineSpacingExtra="-4dp"
            android:layout_marginBottom="48dp"
            android:textAllCaps="false"
            android:text="kirim"
            android:background="@drawable/tombolabuabumuda"
            android:textColor="#fff"/>



    </LinearLayout>

</ScrollView>