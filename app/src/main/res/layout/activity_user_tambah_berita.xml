<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.berita.UserTambahBerita">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_judul_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Judul"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edt_konten_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Konten"
            android:inputType="textLongMessage" />

        <EditText
            android:id="@+id/edt_tgl_terbit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tanggal terbit"
            android:inputType="date" />

        <EditText
            android:id="@+id/edt_penerbit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Penerbit"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/img_berita_target"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic[16]" />

        <Button
            android:id="@+id/btn_choose_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Photo" />

        <Button
            android:id="@+id/btn_kirim_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim" />

    </LinearLayout>
</RelativeLayout>