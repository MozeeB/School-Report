<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapetumpul">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20sp">

                <android.support.v7.widget.CardView
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/iv_daftarsiswa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile"/>

                </android.support.v7.widget.CardView>



                <TextView
                    android:id="@+id/tv_DaftarnamaSiswa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fulanah Bin Fulan"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_marginLeft="95dp"/>

                <TextView
                    android:id="@+id/tv_daftarkelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:textAllCaps="true"
                    android:layout_below="@+id/tv_DaftarnamaSiswa"
                    android:layout_marginLeft="95dp"
                    android:fontFamily="@font/open_sans"
                    android:text="10 rpl a"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_daftaralamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:textAllCaps="false"
                    android:layout_below="@+id/tv_daftarkelas"
                    android:layout_marginLeft="95dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Cilengsi, Bogor, JawaBarat"
                    android:textSize="13sp" />



                <ImageButton
                    android:id="@+id/btn_daftaroverFlof_siswa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_more_vert_black_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="false"/>

            </RelativeLayout>




        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>