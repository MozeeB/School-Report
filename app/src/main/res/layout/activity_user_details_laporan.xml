<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="325dp"
            android:layout_height="325dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/img_lapor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/testimage"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_nama_lapor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fulan Bin Fulan"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/open_sans_light"
            android:textSize="28sp"
            android:layout_marginTop="22dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_kelas_lapor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas 10 A"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:layout_marginTop="-4dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wali :"
                android:fontFamily="@font/open_sans_light"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_wali_lapor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/open_sans_light"
                android:text="Fulan Al Fulan"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:textColor="#508C46"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poin :"
                android:fontFamily="@font/open_sans_light"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_poin_lapor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/open_sans_light"
                android:text="70"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:textColor="#508C46"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis pelanggaran :"
                android:fontFamily="@font/open_sans_light"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_jenis_pelangar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/open_sans_light"
                android:text="Berat"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:textColor="#FF7979"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keterangan :"
            android:fontFamily="@font/open_sans_light"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"
            android:textColor="#000"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapetumpulabuabu"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_keterangan_lapor"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/open_sans_light"
                android:textSize="14sp"
                android:text="Fulan membagikan contekan ketika ujian nasional berlangsung, hal ini sangatlah buruk"/>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal lapor :"
                android:fontFamily="@font/open_sans_light"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tgl_lapor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/open_sans_light"
                android:text="2019-12-12"
                android:textSize="18sp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pelapor :"
                android:fontFamily="@font/open_sans_light"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_pelapor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/open_sans_light"
                android:text="Ust Fulan"
                android:textSize="18sp"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

        </RelativeLayout>




    </LinearLayout>




</ScrollView>