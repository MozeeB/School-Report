<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/img_kegiatan_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#6AB04C"/>

        <TextView
            android:id="@+id/tv_nama_kegiatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kajian Rutin"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/open_sans_light"
            android:textSize="28sp"
            android:layout_marginTop="22dp"
            android:textColor="#000"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#EEEEEE"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal :"
                android:fontFamily="@font/open_sans_light"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_tanggal_kegiatan_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/open_sans_light"
                android:text="2019-04-12"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:textColor="#508C46"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam :"
                android:fontFamily="@font/open_sans_light"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_jam_kegiatan_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/open_sans_light"
                android:text="13"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:textColor="#508C46"/>

        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#EEEEEE"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tujuan :"
            android:fontFamily="@font/open_sans_light"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"
            android:textColor="#000"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapetumpulabuabu"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_tujuan"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/open_sans_light"
                android:textSize="14sp"
                android:text="Kajian Rutin kitab adabul mufrad dari imam bukhari, disampaikan oleh para asatidz smk idn"/>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#EEEEEE"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi :"
            android:fontFamily="@font/open_sans_light"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"
            android:textColor="#000"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapetumpulabuabu"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_lokasi_kegiatan_details"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/open_sans_light"
                android:textSize="14sp"
                android:text="Islamic Development Network, Jonggol, Bogor, Indonesia"/>


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

        </RelativeLayout>




    </LinearLayout>




</ScrollView>