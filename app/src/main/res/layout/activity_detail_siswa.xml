<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".user.tabDaftar.siswa.DetailSiswa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/img_siswa_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C4C4C4"/>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F6F6"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_nama_siswa_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fulan Al Fulan bin Fulan"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="-5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans"
                android:layout_centerVertical="true"
                android:textSize="28sp"
                android:textColor="#508C46"/>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas :"
                android:fontFamily="@font/open_sans_light"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_kelas_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/open_sans_light"
                android:text="RPL 10 A"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:textColor="#ADADAD"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umur :"
                android:fontFamily="@font/open_sans_light"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_details_umur_siswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/open_sans_light"
                android:text="16"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:textColor="#ADADAD"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir :"
                android:fontFamily="@font/open_sans_light"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_tgl_lahirdetail_siswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/open_sans_light"
                android:text="1939-01-12"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:textColor="#ADADAD"/>

        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="20dp"
            android:background="#EEEEEE"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat :"
            android:fontFamily="@font/open_sans_light"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"
            android:textColor="#000"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapetumpulabuabu"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_detail_alamat_siswa"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/open_sans_light"
                android:textSize="14sp"
                android:text="Cimaggis, Depok, JawaBarat"/>


        </RelativeLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

        </RelativeLayout>




    </LinearLayout>




</ScrollView>