<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.kegiatan.UserTambahKegiatan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_nama_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nama Kegiatan/Agenda"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edt_tujuan_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tujuan Kegiatan"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edt_keterangan_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Keterangan"
            android:inputType="textLongMessage" />

        <EditText
            android:id="@+id/edt_jam_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Jam"
            android:inputType="time" />

        <EditText
            android:id="@+id/edt_tgl_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tanggal"
            android:inputType="date" />

        <EditText
            android:id="@+id/edt_lokasi_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Lokasi"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/img_target_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic[10]" />

        <Button
            android:id="@+id/btn_pilih_foto_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Photo" />

        <Button
            android:id="@+id/btn_kirim_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim" />
    </LinearLayout>

</RelativeLayout>